{
  "imports": {
    "$Task": "https://deno.land/x/functional@v1.3.2/library/Task.js",
    "$Response": "https://deno.land/x/functional_io@v1.1.0/library/Response.js",
    "$startHTTPServer": "https://deno.land/x/functional_http_server@v0.3.1/library/server.js",
    "$Mongoose": "https://deno.land/x/mongoose@8.5.2",
    "$Ramda": "https://deno.land/x/ramda@v0.27.2/mod.ts"
  },
  "tasks": {
    "start": "deno run -A src/mod.ts",
    "dev": "deno run --unstable-hmr -A src/mod.ts"
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["src/"],
    "exclude": ["src/testdata/", "src/fixtures/**/*.ts"]
  }
}
