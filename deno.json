{
  "imports": {
    "$assert": "jsr:@std/assert@^1.0.0"
  },
  "tasks": {
    "dev": "deno run --unstable-hmr -A src/index.ts"
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["src/"],
    "exclude": ["src/testdata/", "src/fixtures/**/*.ts"]
  }
}
